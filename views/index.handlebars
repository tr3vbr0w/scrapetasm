{{!-- Row container for earch resorts card --}}
<div class="container">
  <div class="row">
    {{#each resorts}}
    <div class="card col s3">
      <div class="card-image waves-effect waves-block waves-light">
        <img class="activator" src="">
      </div>
      <div class="card-content">
        <span class="card-title activator grey-text text-darken-4">{{this.resortTitle}}<i
            class="material-icons right">Comment</i></span>
        <p><a href="{{this.link}}">This is a link</a></p>
        <a href="" class="btn delete" id="{{this._id}}">Delete</a>
      </div>
      <div class="card-reveal">
        <span class="card-title grey-text text-darken-4">{{this.resortTitle}}<i
            class="material-icons right">close</i></span>
        <div class="row">
          <form class="col s12">
            <div class="row">
              <div class="input-field col s12">
                <textarea id="textarea1" class="materialize-textarea"></textarea>
                <label for="textarea1">Textarea</label>
              </div>
            </div>
          </form>
        </div>
      </div>
    </div>
    {{/each}}
  </div>
</div>